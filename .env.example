# ---- Google Maps ----
VITE_GOOGLE_MAPS_API_KEY=YOUR_GOOGLE_MAPS_API_KEY_HERE
VITE_GOOGLE_MAPS_MAP_ID=DEMO_MAP_ID

# Location picking
VITE_LOCATION_MODE=random   # 'random' or 'country'
VITE_COUNTRY=Canada         # used when VITE_LOCATION_MODE=country
VITE_INCLUDE_OCEANS=false   # false = bias to landmasses
VITE_LOW_QUOTA_MODE=false   # true = curated Street View pool (few lookups)
VITE_SV_ATTEMPT_BUDGET=8    # max Street View lookups per round
VITE_SV_BASE_BACKOFF_MS=900 # ms base backoff (jittered)
VITE_SV_MAX_RADIUS_M=300000 # max search radius

# ---- Firebase (Web App config from Firebase Console) ----
VITE_FIREBASE_API_KEY=YOUR_FIREBASE_API_KEY
VITE_FIREBASE_AUTH_DOMAIN=yourapp.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=yourapp
VITE_FIREBASE_APP_ID=1:1234567890:web:abcdef0123456789
VITE_FIREBASE_STORAGE_BUCKET=yourapp.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=1234567890
VITE_FIREBASE_MEASUREMENT_ID=G-XXXXXXXXXX
